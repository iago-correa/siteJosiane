<div style="width:70%;padding:10px;">
	
	<h1>Editar aluno</h1>

	<hr><br>

	<% flash.each do |name, msg| -%>
		<%= content_tag :div, msg, class: name %><br>
	<% end %>

	<br>

	<center>

		<%= form_for @aluno, :url => url_for(:controller => 'alunos', :action => 'troca_senha') do |f| %>
			Antiga senha: <%= password_field_tag :senha_antiga %><br/>
			Nova senha: <%= password_field_tag :senha %><br/>
			<br>
			<%= link_to "Cancelar", @aluno, class:"button" %> 
			<%= submit_tag 'Trocar' %>
		<% end %>

	</center>

</div>

