<div class="container" style="width:30%;margin-left:auto;margin-right:auto;">
	
	<h1>Editar aluno</h1>

	<hr><br>

	<% flash.each do |name, msg| -%>
		<%= content_tag :div, msg, class: "bg-danger" %><br>
	<% end %>

		<%= form_for @aluno, :class => 'form-signin' do |f| %>
		<div class="form-group">
			<label for="nome">Nome: </label>
				<%= f.text_field :nome, :class => "form-control" %>
		</div>
		<div class="form-group">
			<label for="email">E-mail: </label>
				<%= f.text_field :email, :class => "form-control" %>
		</div>
		<div class="form-group">
			<label for="matricula">Matr√≠cula: </label>
				<%= f.text_field :matricula, :class => "form-control" %>
		</div>
		<div class="form-group">
			<label for="turma">Turma: </label>
			<%= collection_select(:aluno, :turma_id, Turma.all.order(:codigo), :id, :codigo, {:selected => @aluno.turma_id }) %>
		</div>
		<%= link_to "Cancelar", @aluno, class:"btn btn-primary" %> 
		<%= submit_tag 'Atualizar', class:"btn btn-default" %>
		<% end %>

</div>