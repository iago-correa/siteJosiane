<div style="width:70%;padding:10px;">
	
	<h1>Dados cadastrais</h1>

	<hr><br>

	<% flash.each do |name, msg| -%>
		<%= content_tag :div, msg, class: name %><br>
	<% end %>

	<br>

	<center>

		<%= form_for @aluno do |f| %>
			Nome: <%= f.text_field :nome %><br/>
			E-mail: <%= f.text_field :email %><br/>
			Matr√≠cula: <%= f.text_field :matricula %><br/>
			Turma: <%= collection_select(:aluno, :turma_id, Turma.all.order(:codigo), :id, :codigo) %>
			<br>
			Senha: <%= f.password_field :senha %><br/>
			Confirmar senha: <%= password_field_tag :senha2 %><br/>
			<br>
			<%= link_to "Cancelar", url_for(:controller => 'home', :action => 'login'),
				class:"button" %> 
			<%= submit_tag 'Cadastrar' %>
		<% end %>

	</center>

</div>

