<div class="container" style="width:30%;margin-left:auto;margin-right:auto;">
	
	<h2>Inserir nota de aluno</h2>

	<hr>

	<%= form_for @nota, :url => url_for(:controller => 'notas', :action => 'create'), :class => 'form-signin' do |f| %>
		<div class="form-group">
			<label for="avaliacao">Avaliação:</label>
			<%= collection_select(:nota, :avaliacao_id, @avaliacoes, :id, :descricao, {}, {class: "form-control"}) %>
		</div>
		<div class="form-group">
			<label for="aluno">Aluno:</label>
			<%= collection_select(:nota, :aluno_id, @alunos, :id, :matricula, {}, {class: "form-control"}) %>
		</div>
		<div class="form-group">
			<label for="nota">Nota:</label>
			<%= f.text_field :nota,
			 :class => "form-control" %>
		</div>
		<br>
		<%= link_to "Voltar", professores_path, class:"btn btn-default" %> 
		<%= submit_tag 'Inserir', class:"btn btn-default" %>
	<% end %>	

</div>