<div class="container" style="width:30%;margin-left:auto;margin-right:auto;">
	
	<h1>Inserir nota</h1>

	<hr>

	<%= form_for @nota, :url => url_for(:controller => 'notas', :action => 'create'), :class => 'form-signin' do |f| %>
		<div class="form-group">
			<label for="nome">Nota:</label>
			<%= f.text_field :nota,
			 :class => "form-control" %>
		</div>
		<div class="form-group">
			<label for="aluno">Aluno: </label>
			<%= f.text_field :aluno,
			 :class => "form-control" %>
		</div>
		<div class="form-group">
			<label for="avaliacao">Avaliação:</label>
			<%= f.text_field :avaliacao,
			 :class => "form-control" %>
		</div>
		<br>
		<%= link_to "Voltar", professores_path, 
			class:"btn btn-default" %> 
		<%= submit_tag 'Inserir', 
			class:"btn btn-default" %>
		<br>
	<% end %>	

</div>