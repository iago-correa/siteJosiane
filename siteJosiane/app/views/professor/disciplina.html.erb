<div class="container" style="width:30%;margin-left:auto;margin-right:auto;">
	
	<h1>Inserir disciplina</h1>

	<hr>

	<% flash.each do |name, msg| -%>
		<%= content_tag :div, msg, class: "text-danger" %><br>
	<% end %>

	<%= form_for @disciplina, :url => url_for(:controller => 'professor', :action => 'disciplina'), :class => 'form-signin' do |f| %>
		<div class="form-group">
			<label for="nome">Nome:</label>
			<%= text_field_tag :nome, nil,
			 :class => "form-control" %>
		</div>
		<div class="form-group">
			<label for="chs">Carga horária semanal:</label>
			<%= text_field_tag :chs, nil,
			 :class => "form-control" %>
		</div>
		<div class="form-group">
			<label for="cht">Carga horária total:</label>
			<%= text_field_tag :cht, nil,
			 :class => "form-control" %>
		</div>
		<%= link_to "Voltar", root_path(:acessorestritojosi), 
			class:"btn btn-default" %> 
		<%= submit_tag 'Inserir', 
			class:"btn btn-default" %>
		<br>
	<% end %>	

</div>