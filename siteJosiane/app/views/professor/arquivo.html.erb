<div class="container" style="width:30%;margin-left:auto;margin-right:auto;">
	
	<h1>Inserir arquivo</h1>

	<hr>

	<% flash.each do |name, msg| -%>
		<%= content_tag :div, msg, class: "text-danger" %><br>
	<% end %>

	<%= form_for @disciplina, :url => url_for(:controller => 'professor', :action => 'arquivo'), :class => 'form-signin' do |f| %>
		<div class="form-group">
			<label for="nome">Nome:</label>
			<%= text_field_tag :nome, nil,
			 :class => "form-control" %>
		</div>
		<div class="form-group">
			<label for="conteudo">Conteúdo:</label>
			<%= text_field_tag :conteudo, nil,
			 :class => "form-control" %>
		</div>
		<div class="form-group">
			<label for="tipo">Tipo: </label>
			<%= collection_select(:aluno, :turma_id, "Vídeo", "Lista", "Resolução", "Material", :id, :codigo, {}, {class: "form-control"}) %>
		</div>
		<div class="form-group">
			<label for="extensao">Extensão: </label>
			<%= text_field_tag :extensao, nil,
			 :class => "form-control" %>
		</div>
		<%= link_to "Voltar", root_path(:acessorestritojosi), 
			class:"btn btn-default" %> 
		<%= submit_tag 'Inserir', 
			class:"btn btn-default" %>
		<br>
	<% end %>	

</div>