<div class="container" style="width:30%;margin-left:auto;margin-right:auto;">
	
	<h1>Login</h1>

	<hr>

	<%= form_for @professor, :url => url_for(:controller => 'professores', :action => 'log'), :class => 'form-signin' do |f| %>
		<div class="form-group">
			<label for="matricula">Siape:</label>
			<%= text_field_tag :siape, nil,
			 :class => "form-control" %>
		</div>
		<div class="form-group">
		<label for="senha">Senha:</label>
		<%= password_field_tag :senha, nil,
			 :class => "form-control" %>
		</div> 
		<%= submit_tag 'Entrar', 
			class:"btn btn-default" %>
		<br>
		<hr style="opacity:0.5;">
		Novo professor? <%= link_to "Cadastre-se", new_professor_path, class:"btn btn-default"%>
	<% end %>	

</div>