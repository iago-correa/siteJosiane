<div class="container" style="width:30%;margin-left:auto;margin-right:auto;">
	
	<h1>Login</h1>

	<hr>

	<% flash.each do |name, msg| -%>
		<%= content_tag :div, msg, class: "bg-danger" %><br>
	<% end %>

	<%= form_for @aluno, :url => url_for(:controller => 'home', :action => 'log'), :class => 'form-signin' do |f| %>
		<div class="form-group">
			<label for="matricula">Matr√≠cula:</label>
			<%= text_field_tag :matricula, nil,
			 :class => "form-control" %>
		</div>
		<div class="form-group">
		<label for="senha">Senha:</label>
		<%= password_field_tag :senha, nil,
			 :class => "form-control" %>
		</div>
		<%= link_to "Voltar", root_path(:index), 
			class:"btn btn-default" %> 
		<%= submit_tag 'Entrar', 
			class:"btn btn-default" %>
		<br>
		<hr style="opacity:0.5;">
		Novo aluno? <%= link_to "Cadastre-se", aluno_path(:new),class:"btn btn-primary"%>
	<% end %>	

</div>



