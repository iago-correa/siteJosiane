<div class="container" style="width:30%;margin-left:auto;margin-right:auto;">
	
	<h1>Inserir notas e presenças</h1>

	<hr>

	<%= form_for @disciplina, :url => url_for(:controller => 'disciplinas', :action => 'create'), :class => 'form-signin' do |f| %>
		<div class="form-group">
			<label for="nome">Nome:</label>
			<%= f.text_field :nome,
			 :class => "form-control" %>
		</div>
		<div class="form-group">
			<label for="chs">Carga horária semanal:</label>
			<%= f.text_field :chs,
			 :class => "form-control" %>
		</div>
		<div class="form-group">
			<label for="cht">Carga horária total:</label>
			<%= f.text_field :cht,
			 :class => "form-control" %>
		</div>
		<br>
		<%= link_to "Voltar", professores_path, 
			class:"btn btn-default" %> 
		<%= submit_tag 'Inserir', 
			class:"btn btn-default" %>
		<br>
	<% end %>	

</div>