<div class="container" style="width:30%;margin-left:auto;margin-right:auto;">

	<h1>Postagem</h1>

	<br>

	<%= form_for @post, :url => url_for(:controller => 'posts', :action => 'update'), :class => 'form-signin' do |f| %>
		<div class="form-group">
			<label for="titulo">Título:</label>
			<%= f.text_field :titulo,
			 :class => "form-control" %>
		</div>
		<div class="form-group">
			<label for="conteudo">Conteúdo:</label>
			<%= f.text_area :conteudo,
			 :class => "form-control" %>
		</div>
		<%= link_to "Voltar", @post, class:"btn btn-default" %> 
		<%= submit_tag 'Atualizar', class:"btn btn-default" %>
	<% end %>	

</div>