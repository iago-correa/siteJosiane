<div class="container" style="width:30%;margin-left:auto;margin-right:auto;">

	<h1>Postagem</h1>

	<br>

	<%= form_for @post, :url => url_for(:controller => 'posts', :action => 'create'), :class => 'form-signin' do |f| %>
		<div class="form-group">
			<label for="titulo">Título:</label>
			<%= f.text_field :titulo,
			 :class => "form-control" %>
		</div>
		<div class="form-group">
			<label for="conteudo">Conteúdo:</label>
			<%= f.text_area :conteudo,
			 :class => "form-control" %>
		</div>
		<div class="form-group">
			<label for="tipo">Tipo: </label>
			<%= f.select :tipo, options_for_select([["Lembrete", "Lembrete"], ["Aviso", "Aviso"], ["Video", "Video"], ["Lista", "Lista"], ["Resolucao", "Resolucao"], ["Material", "Material"]]), class: "form-control" %>
		</div>
	<% end %>	

</div>