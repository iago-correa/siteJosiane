<div class="container" style="width:30%;margin-left:auto;margin-right:auto;">
	
	<h1>Inserir atendimento</h1>

	<hr>

	<% flash.each do |name, msg| -%>
		<%= content_tag :div, msg, class: "text-danger" %><br>
	<% end %>

	<%= form_for @atendimento, :url => url_for(:controller => 'atendimentos', :action => 'create'), :class => 'form-signin' do |f| %>
		<div class="form-group">
			<label for="hora_inicio">Hora de início:</label>
			<%= f.text_field :hora_inicio,
			 :class => "form-control" %>
		</div>
		<div class="form-group">
			<label for="hora_fim">Hora de fim:</label>
			<%= f.text_field :hora_fim,
			 :class => "form-control" %>
		</div>
		<div class="form-group">
			<label for="dia">Dia: </label>
			<%= f.select :dia, options_for_select([["Segunda", "seg"], ["Terça", "ter"], ["Quarta","qua"], ["Quinta","qui"], ["Sexta", "sex"]]), class: "form-control" %>
		</div><br>
		<%= link_to "Voltar", professores_path, class:"btn btn-default" %> 
		<%= submit_tag 'Inserir', class:"btn btn-default" %>
	<% end %>	

</div>